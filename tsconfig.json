{
  "compilerOptions": {
    "outDir": "./built",
    "strict": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "target": "ESnext",
    "module": "ESnext",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["./src/**/*"]
}
